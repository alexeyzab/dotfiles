Config { font = "xft:Fantasque Sans Mono:size=10:bold:antialias=true"
       , borderColor = "white"
       , border = NoBorder
       , bgColor = "#002B36"
       , fgColor = "#839496"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Network "wlp3s0" ["-L","0","-H","32",
                                          "--normal","#859900","--high","#DC322F"] 10
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","#859900","--high","#DC322F"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %-I:%M %p" "date" 10
                    , Run BatteryP ["BAT0"]
                        ["-t", "<acstatus>"
                        , "-f", "/sys/class/power_supply/ADP1/online"
                        , "-L", "10", "-H", "80"
                        , "-l", "red", "-h", "#859900"
                        , "--", "-O", "Charging", "-i", "Idling",  "-o", "Battery: <left>% * <timeleft> Hours"
                        ] 30
                    , Run Com "/home/alexeyzab/.local/bin/volume" [] "volume" 10
                    , Run Com "/home/alexeyzab/.local/bin/brightness" [] "brightness" 10
                    , Run Com "/home/alexeyzab/.local/bin/kb-status" [] "kb-status" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% * %swap% | %wlp3s0% | %kb-status% | Vol: <fc=#859900>%volume%</fc> | Br: <fc=#859900>%brightness%</fc> | <fc=#839496>%date%</fc> | %battery% "
       }
