  name = Alexey Zabelin
	signingkey = 96DA2C14
[fetch]
  prune = true
[commit]
  template = ~/.config/git/gitmessage
  gpgsign = true
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = icdiff $LOCAL $REMOTE | less -R
[init]
  templatedir = ~/.config/git/template
[rebase]
  autosquash = true
[credential]
  helper = store
[gpg]
  program = /opt/homebrew/bin/gpg
